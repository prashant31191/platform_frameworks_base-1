<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#53d0ff"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dokdo_dialog_icon"
        android:scaleType="fitCenter"
        android:layout_margin="10dip" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/dokdo_dialog_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dokdo_dialog_ani" />
    <TextView
        android:textSize="14.0dip"
        android:gravity="center_horizontal"
        android:id="@+id/dokdo_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13.0dip"
        style="@android:style/TextAppearance.Medium"
        android:textStyle="bold"/>
</LinearLayout>
